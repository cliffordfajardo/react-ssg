{
	"name": "react-ssg",
	"license": "MIT",
	"scripts": {
		"force-refresh": "osascript -e 'tell application \"Google Chrome\" to reload active tab of window 1'",
		"prerender-html": "ts-node --transpile-only src/server/ssg.tsx",
		"prerender-css": "sass --no-charset --no-source-map --style=compressed src/style.scss dist/style.css",
		"prerender-js-dev": "NODE_ENV=development node esbuild.js",
		"prerender-js-prod": "NODE_ENV=production node esbuild.js",
		"test": "jest",
		"start": "yarn rimraf dist && yarn prerender-html && yarn prerender-css && yarn nodemon --watch src --exec 'yarn prerender-js-dev && yarn force-refresh' --ext ts,tsx",
		"build": "yarn rimraf dist && yarn prerender-html && yarn prerender-css && yarn prerender-js-prod",
		"serve": "yarn http-server dist --brotli"
	},
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@types/node": "^14.14.10",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.6",
		"esbuild": "^0.8.18",
		"http-server": "^0.12.3",
		"jest": "^26.6.3",
		"nodemon": "^2.0.6",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"sass": "^1.30.0",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.0",
		"typescript": "^4.1.2"
	}
}
