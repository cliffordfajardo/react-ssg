{
	"name": "react-ssg",
	"license": "MIT",
	"scripts": {
		"force-refresh": "osascript -e 'tell application \"Google Chrome\" to reload active tab of window 1'",
		"prerender-html": "ts-node --transpile-only src/server/ssg.tsx",
		"prerender-css": "sass --no-charset --no-source-map --style=compressed src/style.sass public/style.css",
		"prerender-js": "node esbuild.js",
		"test": "jest",
		"build-dev": "NODE_ENV=development yarn prerender-html && yarn prerender-css && yarn prerender-js && yarn force-refresh",
		"build-prod": "NODE_ENV=production yarn prerender-html && yarn prerender-css && yarn prerender-js && yarn force-refresh",
		"watch-dev": "yarn watch --interval 0.1 'yarn build-dev' src",
		"watch-prod": "yarn watch --interval 0.1 'yarn build-prod' src",
		"serve": "yarn http-server dist --brotli"
	},
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@types/node": "^14.14.10",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.6",
		"esbuild": "^0.8.18",
		"http-server": "^0.12.3",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"sass": "^1.30.0",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.0",
		"typescript": "^4.1.2",
		"watch": "^1.0.2"
	}
}
