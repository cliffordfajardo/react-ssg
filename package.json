{
	"name": "react-ssg",
	"license": "MIT",
	"scripts": {
		"/* force-refresh: Force refreshes the active tab */": "",
		"force-refresh": "osascript -e 'tell application \"Google Chrome\" to reload active tab of window 1'",
		"/* build-html: Builds static HTML */": "",
		"build-html": "ts-node --transpile-only src/ssr.tsx",
		"/* build-js: Builds static JS */": "",
		"build-js": "node esbuild.js",
		"/* watch-js: Watcher for building static JS */": "",
		"watch-js": "yarn watch --interval 0.1 'yarn build-html && yarn build-js && yarn force-refresh' src"
	},
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@types/node": "^14.14.10",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.6",
		"esbuild": "^0.8.18",
		"nodemon": "^2.0.6",
		"serve": "^11.3.2",
		"ts-node": "^9.1.0",
		"typescript": "^4.1.2",
		"watch": "^1.0.2"
	}
}
