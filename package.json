{
	"name": "react-ssg",
	"license": "MIT",
	"scripts": {
		"__force-refresh": "osascript -e 'tell application \"Google Chrome\" to reload active tab of window 1'",
		"__build-html": "ts-node --transpile-only src/server/ssg.tsx",
		"__build-js-dev": "NODE_ENV=development node esbuild.js",
		"__build-js-prod": "NODE_ENV=production node esbuild.js",
		"/* build-*: Builds static HTML and JS */": "",
		"build-dev": "yarn __build-html && yarn __build-js-dev && yarn __force-refresh",
		"build-prod": "yarn __build-html && yarn __build-js-prod && yarn __force-refresh",
		"/* watch-*: Continuously builds static HTML and JS */": "",
		"watch-dev": "yarn watch --interval 0.1 'yarn build-dev' src",
		"watch-prod": "yarn watch --interval 0.1 'yarn build-prod' src"
	},
	"dependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@types/node": "^14.14.10",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.6",
		"esbuild": "^0.8.18",
		"serve": "^11.3.2",
		"ts-node": "^9.1.0",
		"typescript": "^4.1.2",
		"watch": "^1.0.2"
	}
}
